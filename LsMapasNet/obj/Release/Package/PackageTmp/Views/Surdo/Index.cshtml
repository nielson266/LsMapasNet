@model IEnumerable<LsMapasNet.Entidade.Surdo>

@{
    ViewBag.Title = "Lista de Surdos Cadastrados";
}

<h2>Lista de Surdos Cadastrados</h2>


@using (Html.BeginForm("index", "surdo", FormMethod.Post, new { @class = "form-inline" }))
{
    <div class="form-group">
        <label for="exampleInputName2">Name:</label>
        @Html.TextBox("SearchSurdo", string.Empty, new { @class = "form-control" })
    </div>
    <input type="submit" value="Buscar" class="btn btn-default" />
}
<p>
    @Html.ActionLink("Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.endereco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.perimetro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.classe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.latitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.longitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bairro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.perimetro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.classe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id })
            </td>
        </tr>
    }

</table>
