
@{
    ViewBag.Title = "Backup";
}

<div class="container">
    <h5 class="amber-text text-darken-4">Backup</h5>

    @using (Html.BeginForm())
    {

        <button type="button" id="btnBackup"> Backup </button>
        <a href=@Url.Action("Download", "Configuracao")>Download</a>
    }
</div>
@section Scriptsoutros
{
    <script type="text/javascript">
        $("#btnBackup").click(function () {
            $.get("/lsmapas/configuracao/backupjson", function (data) {
                console.log(data);
                if (data[0] == 'OK') {
                    $("#caminho").val(data[1]);
                    //$.get("/configuracao/Download", { caminho : data[1]}, function () {

                    //});
                }
            });
        });
    </script>
}
