@model IEnumerable<LsMapasNet.Entidade.Mapas>

@{
    ViewBag.Title = "LISTA DE MAPAS";
}




@helper TruncateDescription(string input, int maxLength)
{
    if (input.Length <= maxLength)
    {
            @input
    }
    else
    {
            @input.Substring(0, maxLength)<text>...</text>
    }
}

<div class="container">

    <h5>LISTA DE MAPAS</h5>

    <p>
        @Html.ActionLink("Novo", "Create")
    </p>

    <table class="striped">
        <tr class="blue-grey darken-4">
            <th class="white-text text-white">
                Mapa
            </th>
            <th class="white-text text-white hide-on-small-only">
                Obs
            </th>
            <th class="white-text text-white">
                Zoom Mapa
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.desc_mapa)
                </td>
                <td class="hide-on-small-only">
                    @TruncateDescription(item.obs,15)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.zoommapa)
                </td>
                <td>
                    <a href=@Url.Action("IncluirSurdoMapa", "Mapa",new { idmapa = @item.id }) class="btn-floating btn waves-effect waves-light cyan accent-4"><i class="material-icons">add</i></a>
                    <a href=@Url.Action("Edit", "Mapa",new { id = @item.id }) class="btn-floating btn waves-effect waves-light amber darken-4" ><i class="material-icons">mode_edit</i></a>
                    <a href=@Url.Action("ImpressaoMapa", "Mapa",new { id = @item.id }) class="btn-floating btn waves-effect waves-light green darken-4 "><i class="material-icons">print</i></a>
                </td>
            </tr>
        }
    </table>
</div>
