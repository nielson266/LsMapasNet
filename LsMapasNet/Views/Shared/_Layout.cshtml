<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LSMapas</title>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @Styles.Render("~/Content/materializecss")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav>
        <div class="nav-wrapper blue-grey darken-4">
            @Html.ActionLink("LSMapas", "Index", "Home", new { area = "" }, new { @class = "brand-logo right" })
            <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
            <ul class="left hide-on-med-and-down">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Surdo", "Index", "Surdo")</li>
                <li>@Html.ActionLink("Mapa", "Index", "Mapa")</li>
            </ul>
            <ul class="side-nav" id="mobile-demo">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Surdo", "Index", "Surdo")</li>
                <li>@Html.ActionLink("Mapa", "Index", "Mapa")</li>
            </ul>
        </div>
    </nav>

    <div>
        @RenderBody()
        <hr />
        <footer class="page-footer blue-grey darken-4" style="text-align:center">
            <p class="white-text text-white">&copy; 2016 - @DateTime.Now.Year - Sistema de Controle de Mapa - LS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @Scripts.Render("~/bundles/materializejs")
    @Scripts.Render("~/bundles/lsmapasjs")
    @RenderSection("scripts", required: false)
    @RenderSection("Scriptsoutros", required: false)

    
</body>
</html>
